 <launch>
     <param name="robot_description"
        command="$(find xacro)/xacro --inorder '$(find jetbot_description)/urdf/jetbot.urdf' stereo_camera:=false"/>
    
      <!-- Spawn a robot into Gazebo. -->
      <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model jetbot -param robot_description -z 1 -x -2 -y -2"/>
    
      <!-- Load joint controller configurations from YAML file to parameter server -->
      <rosparam file="$(find jetbot_description)/config/jetbot_control.yaml" command="load"/>
      
      <!-- load the controllers -->
      <node 
          name="controller_spawner" 
          ns="rover_ns" pkg="controller_manager" 
          type="spawner" 
          respawn="false" 
          output="screen"  
          args="corner_lf_wheel_lf_controller corner_rf_wheel_rf_controller joint_state_controller"/>
      
      <!-- convert joint states to TF transforms for rviz, etc -->
      <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen">
      </node>
      
      <node name="motion" pkg="jetbot_description" type="motion" respawn="true" output="screen">
      </node>
      
  </launch>
